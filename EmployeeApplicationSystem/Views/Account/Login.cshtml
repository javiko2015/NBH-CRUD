@model EmployeeApplicationSystem.Models.InputModels.LoginInputModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "frmAutenticar" }))
{
    @Html.ValidationSummary(true, "Error", new { @class = "alert alert-danger" });
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong class="">Login</strong>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal" role="form">

                        <div class="form-group">
                            @Html.LabelFor(u => u.Username, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(u => u.Username, new { placeholder = "Username", @class = "form-control" })
                                @Html.ValidationMessageFor(u => u.Username)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(u => u.Password, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.PasswordFor(u => u.Password, new { placeholder = Resource.Password, @class = "form-control" })
                                @Html.ValidationMessageFor(u => u.Password)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3"></label>
                            <div class="col-md-9">
                                @Html.CheckBoxFor(u => (u.RememberMe))
                                @Html.LabelFor(u => u.RememberMe)
                            </div>
                        </div>
                        <div class="form-group last">
                            <label class="col-md-3"></label>
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-default" onclick="Autenticar()">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
}
